<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="@style/CommonTheme">
        <!-- 下面代码可选，TranslucentStatus为沉浸状态栏主题，配合下面BaseActivity代码使用 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAppTheme" parent="BaseAppTheme">

    </style>

    <style name="FullScreen" parent="@style/MyAppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CommonButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_margin</item>
        <item name="android:textSize">@dimen/bigger_text_size</item>
    </style>

    <style name="LabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/bigger_text_size</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/color999</item>
        <item name="android:textSize">@dimen/bigger_text_size</item>
    </style>

    <style name="HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_margin</item>
    </style>

</resources>
