<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <cn.dlc.commonlibrary.ui.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_button_height"
        android:background="@color/colorPrimary"
        app:showLeftImage="true"
        app:titleText="登录"
        app:titleTextColor="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/normal_24dp">


        <TextView
            style="@style/LabelStyle"
            android:layout_width="@dimen/normal_250dp"
            android:text="手机号：" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="输入手机号" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/normal_24dp">


        <TextView
            style="@style/LabelStyle"
            android:layout_width="@dimen/normal_250dp"
            android:text="验证码" />

        <EditText
            android:id="@+id/et_code"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="输入验证码" />

        <Button
            android:id="@+id/btn_get_code"
            style="@style/CommonButtonStyle"
            android:layout_width="@dimen/normal_300dp"
            android:layout_height="wrap_content"
            android:text="@string/fetch_code" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        style="@style/CommonButtonStyle"
        android:layout_width="@dimen/normal_400dp"
        android:layout_height="wrap_content"
        android:text="登录" />


</LinearLayout>